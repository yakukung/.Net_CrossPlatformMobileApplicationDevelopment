<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1.Views">

    <ShellContent
        Shell.FlyoutBehavior="Disabled"
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate views:ProfilePage}"
        Route="ProfilePage" />

    <ShellContent
        Title="RegistrationPage"
        ContentTemplate="{DataTemplate views:RegistrationPage}"
        Route="RegistrationPage" />

    <ShellContent
        Title="WithdrawPage"
        ContentTemplate="{DataTemplate views:WithdrawPage}"
        Route="WithdrawPage" />

    <ShellContent
        Title="HistoryPage"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="HistoryPage" />

</Shell>