<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.WithdrawPage"
             Title="ถอนรายวิชา">

    <!-- ใช้ ScrollView เพื่อให้เลื่อนดูข้อมูลได้ -->
    <ScrollView>
        <StackLayout Padding="10">
            <!-- Header -->
            <Label Text="รายวิชาที่ลงทะเบียนแล้ว" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- รายวิชาที่ลงทะเบียนแล้ว -->
            <CollectionView ItemsSource="{Binding RegisteredCourses}">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="ไม่พบรายวิชาที่ลงทะเบียน" 
                               HorizontalOptions="Center"
                               FontSize="16"
                               TextColor="Gray"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Grid Padding="5" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <!-- Course ID -->
                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding CourseId}" FontSize="16" FontAttributes="Bold" VerticalOptions="Center" />

                                <!-- Course Name -->
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontSize="16" VerticalOptions="Center" Margin="10,0,0,0" />

                                <!-- Withdraw Button -->
                                <Button Grid.Row="0" Grid.Column="2" Text="ถอนรายวิชา"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WithdrawPageViewModel}}, Path=WithdrawCommand}"
                                        CommandParameter="{Binding CourseId}"
                                        BackgroundColor="#FF3B30"
                                        TextColor="White"
                                        FontSize="14"
                                        CornerRadius="10"
                                        HeightRequest="36"
                                        WidthRequest="100" />

                                <!-- Course Time -->
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Schedule, StringFormat='เวลาเรียน: {0}'}" FontSize="14" TextColor="Gray" />

                                <!-- Instructor -->
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Instructor, StringFormat='ผู้สอน: {0}'}" FontSize="14" TextColor="Gray" />
                            </Grid>

                            <!-- Divider -->
                            <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,10,0,10" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Footer Buttons -->
            <Grid ColumnDefinitions="*,*" Padding="0,10,0,0">
                <!-- Back Button -->
                <Button Grid.Column="0" Text="ย้อนกลับ"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="{AppThemeBinding Light=#0071e3, Dark=#0A84FF}"
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="20"
                        HeightRequest="44"
                        HorizontalOptions="Center" />

                <!-- Refresh Button -->
                <Button Grid.Column="1" Text="รีเฟรช"
                        Command="{Binding RefreshCommand}"
                        BackgroundColor="{AppThemeBinding Light=#0071e3, Dark=#0A84FF}"
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="20"
                        HeightRequest="44"
                        HorizontalOptions="Center" />
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>